<body>
<div class="rootdiv">
<form method="post" action="editSwitch">
<select name="id">
    <option value="null">Ардуины:</option>
    {{#arduinos}}
    <option value="{{id}}">{{name}}</option>
    {{/arduinos}}
</select>
<button type="submit">Выбрать</button>
</form>
</div>
<div class="rootdiv"> 
    <form method="post" action="editSwitchSave">
    <table cellpadding="0", cellspacing="2">
    <tr>
    <td>Имя</td><td><input type="text" name="name" value="{{name}}"></input></td>
    </tr>
    <tr>
    <td>Адресс</td><td><input type="text" name="address" value="{{address}}"></input></td>
    </tr>
    </table>
    <button type="submit" value="{{id}}" name="id">Сохранить</button><br>
    </form>

    <form method="post" action="deleteSwitch">
        <button type="submit" value="{{id}}" name="id">Удалить</button>
    </form>
</div>
</body>